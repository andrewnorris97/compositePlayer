<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center_horizontal"
              android:padding="20dp">

    <TextView android:id="@+id/base_player_title"
              android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="40sp"
              android:gravity="center"
              android:text="Title"/>

    <ImageView
            android:id="@+id/base_player_image"
            android:layout_width="250dp" android:layout_height="250dp"
            android:layout_gravity="center"/>

    <FrameLayout
            android:id="@+id/base_player_view"
            android:layout_width="match_parent" android:layout_height="match_parent" />

</LinearLayout>